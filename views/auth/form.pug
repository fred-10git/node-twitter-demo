extends ../layout

block content 
    div(class='d-flex flex-row content justify-content-center mx-auto')
        form(class='card w-50 mt-5' method='post' action= '/auth/login')
            .card-header Connexion
            .card-body 
                .form-group 
                    label Email
                    input(class='form-control' type="email" name='email' placeholder='Email')
                .form-group 
                    label Mot de passe
                    input(class='form-control' type="password" name='password' placeholder='Mot de passe')                                                
                if errors 
                    ul(class="my-2")  
                        each error in errors 
                            li(class='text-danger')= error
                .w-100 
                    input(type='submit' value='Connexion' class='btn btn-primary mt-2 ms-auto d-block')