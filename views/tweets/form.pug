extends ../layout

block content 
    div(class='d-flex flex-row content mx-auto')
        .profile-container
            include ../includes/profile
        .flex-fill
            form(class='card' method='post' action= tweet._id ? '/tweets/update/'+tweet._id : '/tweets')
                .card-header Ecrire un tweet
                .card-body 
                    .form-group 
                        textarea(class='form-control' name='content' placeholde='Quoi de neuf ?')= tweet.content
                    if errors 
                        ul(class="my-2")  
                            each error in errors 
                                li(class='text-danger')= error
                    .w-100 
                        input(type='submit' value='Envoyer' class='btn btn-primary mt-2 ms-auto d-block')